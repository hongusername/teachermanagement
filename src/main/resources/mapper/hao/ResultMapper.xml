<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.management.cn.hao.dao.ResultMapper">

    <insert id="addResult" parameterType="Result">
          INSERT INTO result(classid,totalScore,teacherType,surveyType,`options`,createDate,opinion) VALUES (#{classid},#{totalScore},#{teacherType},#{surveyType},#{options},#{createDate},#{opinion})
    </insert>

    <select id="queryResultAll" resultType="Result">
        select *  from result where classid=#{classid} and teachertype=#{teacherType} and DATE_FORMAT(createDate,'%Y-%m') = #{date} order by totalScore desc
    </select>

    <select id="queryResultByClassIdAndDate" resultType="Result">
        SELECT * FROM result WHERE classid = #{classId} AND DATE_FORMAT(createDate,'%Y-%m') = #{createDate}
    </select>
</mapper>
