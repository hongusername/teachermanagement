<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.management.cn.hao.dao.ResultMapper">

    <insert id="addResult" parameterType="Result">
          INSERT INTO result(classid,totalScore,teacherType,surveyType,`options`,createDate,opinion) VALUES (#{classid},#{totalScore},#{teacherType},#{surveyType},#{options},#{createDate},#{opinion})
    </insert>

    <select id="queryResultAll" resultType="Result">
        select *  from result where classid=#{classid} and teachertype=#{teacherType} and createData=#{createData} order by totalScore desc
    </select>

</mapper>
